<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<filter>
		<filter-name>URLDispatcher</filter-name>
		<filter-class>me.zcd.leetml.dispatcher.URLDispatcher</filter-class>
		<init-param>
			<param-name>rootpackage</param-name>
			<param-value>me.zcd.music</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>URLDispatcher</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Admin</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

	<security-role>
		<role-name>admin</role-name>
	</security-role>

	<servlet>
		<servlet-name>homepage</servlet-name>
		<servlet-class>me.zcd.music.controllers.tabs.ShowHomepage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>homepage</servlet-name>
		<url-pattern>homepage</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>homepage</welcome-file>
	</welcome-file-list>
</web-app>
